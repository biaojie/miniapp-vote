.sdistance button{
  width: 90%;
  border-radius: 10rpx;
  background-color: #393A3F;
  color: #FFF;
  font-size: 36rpx;
}
.sinfo{
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #DDDDDD;
}
.sinfo text{
  white-space: nowrap;
}
.sinfo3 textarea{
  width: 75%;
}
.sinfo3{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #DDDDDD;
}
.sinfo3 video{
  width: 100%;
  height: 350rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.sinfo3text{
  background-color: #00B8EE;
  padding: 5rpx 0rpx;
  color: #FFF;
  width: 25%;
  text-align: center;
  border-radius: 6rpx;
}
.sinfo2{
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #DDDDDD;
}
.sinfo2 textarea{
  width: 70%;
  height: 100px;
}
.sUploadPicture{
  width: 75%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  background-color: #fff;
}
.supload{
  width: 33.33%;
  display: flex;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}
.suploadpic{
  margin: auto;
  width: 170rpx;
  height: 170rpx;
  border: 2rpx solid gainsboro;
  display: flex;
  box-sizing: border-box;
}
.suploadpic text{
  box-sizing: border-box;
  margin: auto;
  font-size: 100rpx;
  color: gainsboro;
}
.supload_1{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  position: relative;
}
.supload_2{
  font-size: 28rpx;
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FFF;
  z-index: 999;
  opacity: 0.5;
}

.smore{
  width: 100%;
  font-size: 3.5vw;
  color: #888888;
  padding-top: 10rpx;
}
.sbg{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  opacity: 0.5;
  top: 0;
}
.sdistance{
  background-color: #DDDDDD;
  padding: 50rpx 0;
}

.sdistance2{
  width: 100%;
  height: 120rpx;
  background-color: #DDD;
}